@page
@model StudentsRazorPages.Pages.Journals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Journal.Id" />
            <div class="form-group">
                <label asp-for="Journal.StudentId" class="control-label"></label>
                <select asp-for="Journal.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Journal.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Date" class="control-label"></label>
                <input asp-for="Journal.Date" class="form-control" />
                <span asp-validation-for="Journal.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Subject" class="control-label"></label>
                <input asp-for="Journal.Subject" class="form-control" />
                <span asp-validation-for="Journal.Subject" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Journal.Presence" /> @Html.DisplayNameFor(model => model.Journal.Presence)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
