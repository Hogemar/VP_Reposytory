@page
@model StudentsRazorPages.Pages.Journals.IndexModel

@{
    ViewData["Title"] = "Journal";
}

<h1>Journal</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Journal.First().Student.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Journal.First().Date)</th>
            <th>@Html.DisplayNameFor(model => model.Journal.First().Subject)</th>
            <th>@Html.DisplayNameFor(model => model.Journal.First().Presence)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Journal)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Student.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                <td>@Html.DisplayFor(modelItem => item.Presence)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
